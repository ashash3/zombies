        <View
            android:id="@+id/richmond"
            android:layout_width="172dip"
            android:layout_height="65dip"
            android:layout_marginTop="177dip"
            android:layout_marginLeft="7dip"
            android:background="@drawable/richmond_red"/>
        <View
            android:id="@+id/golden_gate"
